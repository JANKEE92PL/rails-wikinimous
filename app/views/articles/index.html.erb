<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
    <div class="container">
      <p><%= link_to 'Show', article %></p>
      <p><%= link_to 'Edit', edit_article_path(article) %></p>
      <p><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
